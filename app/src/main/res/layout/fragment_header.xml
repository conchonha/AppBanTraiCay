<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.appbantraicay.ui.home.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/line_group1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/h4CAF50"
            android:paddingHorizontal="@dimen/_10sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10ssp"
            android:paddingTop="@dimen/_20sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_user"
                    android:text="Tran Thi Thanh"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_password"
                    android:text="Dang Xuat"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10ssp"
                android:background="@color/white"
                android:drawableEnd="@drawable/ic_search"
                android:hint="@string/search"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_cart"
                android:gravity="center_vertical"
                android:text="@string/cart"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="@dimen/_225sdp"
            android:id="@+id/banner"
            android:layout_marginTop="@dimen/_40sdp"
            android:name="com.example.appbantraicay.ui.home.fragment.FragmentBanner"
            app:layout_constraintTop_toBottomOf="@+id/line_group1"/>

        <com.example.appbantraicay.common.HeaderMenu
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:setMenuListener="@{viewModel}"
            app:layout_constraintTop_toBottomOf="@+id/line_group1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>