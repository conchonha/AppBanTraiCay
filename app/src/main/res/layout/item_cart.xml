<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cart"
            type="com.example.appbantraicay.data.model.responses.Cart" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imggiohang11"
                    setImageUrl="@{cart.image}"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY" />
                <ImageView
                    android:layout_width="30dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:id="@+id/imgbttonxoa"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/txttensanphamgiohang"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/imggiohang11"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:maxWidth="@dimen/_150sdp"
                    android:text="@{cart.nameProduct}"
                    style="@style/TextTitle"
                     />
                <TextView
                    style="@style/TextContent"
                    android:layout_toRightOf="@+id/imggiohang11"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@{cart.totalPrice}"
                    android:textColor="@color/purple_700"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/txtgiasanphamgiohang"
                    android:layout_below="@+id/txttensanphamgiohang"
                   />

                <TextView
                    android:id="@+id/txtvnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txttensanphamgiohang"
                    android:layout_toRightOf="@+id/txtgiasanphamgiohang"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="VNĐ"
                    android:textSize="14dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/txtgiasanphamgiohang"
                    android:layout_toRightOf="@+id/imggiohang11"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="40dp">
                        <Button
                            android:layout_width="match_parent"
                            android:backgroundTint="@color/h904CAF50"
                            android:text="-"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:id="@+id/btngiam"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/txtsoluonggiohang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </FrameLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="40dp">
                        <Button
                            android:layout_width="match_parent"
                            android:backgroundTint="@color/h904CAF50"
                            android:text="+"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:id="@+id/btntang"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>